{
  "tech_stack": [
    "TypeScript",
    "Next.js 16",
    "React 19",
    "MongoDB",
    "Mongoose",
    "NextAuth.js v5 (Auth.js)",
    "Tailwind CSS",
    "Shadcn/UI",
    "Cloudinary",
    "Recharts"
  ],
  "features": [
    {
      "name": "Authentication",
      "description": "Sistema de autenticação com NextAuth.js v5, incluindo login, registro e gerenciamento de sessão",
      "files": [
        "auth.ts",
        "app/api/auth/[...nextauth]/route.ts",
        "app/api/auth/register/route.ts",
        "middleware.ts",
        "lib/auth-utils.ts"
      ]
    },
    {
      "name": "User Profile Management",
      "description": "Gerenciamento completo de perfis de usuários com CRUD, upload de foto e banner",
      "files": [
        "app/api/profile/route.ts",
        "app/api/profile/banner/route.ts",
        "app/settings/profile/page.tsx",
        "models/Profile.ts",
        "models/User.ts"
      ]
    },
    {
      "name": "Job Vacancies",
      "description": "Sistema completo de vagas de emprego com criação, busca, filtros e candidaturas",
      "files": [
        "app/api/jobs/route.ts",
        "app/api/jobs/create/route.ts",
        "app/api/jobs/recommended/route.ts",
        "app/api/jobs/[id]/route.ts",
        "app/jobs/page.tsx",
        "app/jobs/[id]/page.tsx",
        "components/JobCard.tsx",
        "components/CreateJobModal.tsx",
        "components/ApplyJobModal.tsx",
        "models/Vacancy.ts",
        "models/Job.ts"
      ]
    },
    {
      "name": "Applications",
      "description": "Sistema de candidaturas para vagas com upload de currículo e carta de apresentação",
      "files": [
        "app/api/applications/route.ts",
        "app/api/companies/[id]/applications/route.ts",
        "models/Application.ts"
      ]
    },
    {
      "name": "Social Feed",
      "description": "Feed social estilo LinkedIn com posts, vagas, likes, comentários e compartilhamentos",
      "files": [
        "components/MainFeed.tsx",
        "app/feed/page.tsx",
        "app/api/posts/route.ts",
        "app/api/posts/[id]/route.ts",
        "app/api/posts/[id]/like/route.ts",
        "app/api/posts/[id]/comments/route.ts",
        "app/api/posts/[id]/share/route.ts",
        "components/CreatePostModal.tsx",
        "components/CreatePostBox.tsx",
        "components/PostActions.tsx",
        "components/CommentSection.tsx",
        "models/Post.ts"
      ]
    },
    {
      "name": "Company Management",
      "description": "Gerenciamento de empresas com perfis, vagas, recrutadores e estatísticas",
      "files": [
        "app/api/company/create/route.ts",
        "app/api/company/[id]/route.ts",
        "app/api/company/invite/route.ts",
        "app/api/company/recruiters/[id]/approve/route.ts",
        "app/api/company/recruiters/[id]/reject/route.ts",
        "app/company/[id]/page.tsx",
        "app/company/[id]/admin/page.tsx",
        "app/company/[id]/invite/page.tsx",
        "models/Company.ts"
      ]
    },
    {
      "name": "Dashboard",
      "description": "Dashboard administrativo com estatísticas, gráficos e atividades recentes",
      "files": [
        "app/dashboard/page.tsx",
        "app/api/dashboard/stats/route.ts",
        "app/api/dashboard/recent-activities/route.ts",
        "app/api/dashboard/company/[id]/stats/route.ts",
        "components/dashboard/app-sidebar.tsx",
        "components/dashboard/stats-cards.tsx",
        "components/dashboard/chart-area-interactive.tsx",
        "components/dashboard/recent-activities.tsx"
      ]
    },
    {
      "name": "Notifications",
      "description": "Sistema de notificações para usuários sobre candidaturas, conexões e interações",
      "files": [
        "app/api/notifications/route.ts",
        "app/api/notifications/mark-read/route.ts",
        "components/NotificationsDropdown.tsx",
        "models/Notification.ts"
      ]
    },
    {
      "name": "Admin Panel",
      "description": "Painel administrativo do sistema com gerenciamento de usuários e empresas",
      "files": [
        "app/admin/page.tsx",
        "app/api/admin/users/recent/route.ts",
        "app/api/admin/companies/recent/route.ts",
        "app/api/auth/check-admin/route.ts"
      ]
    },
    {
      "name": "Public Profiles",
      "description": "Perfis públicos de usuários estilo LinkedIn com informações profissionais",
      "files": [
        "app/jobboard/[slug]/page.tsx",
        "app/api/profile/public/[slug]/route.ts",
        "components/LeftSidebar.tsx"
      ]
    },
    {
      "name": "Image Upload",
      "description": "Upload de imagens para Cloudinary (fotos de perfil, banners, currículos)",
      "files": [
        "components/auth/ImageUpload.tsx",
        "app/api/profile/banner/route.ts"
      ]
    },
    {
      "name": "UI Components",
      "description": "Componentes UI reutilizáveis baseados em Shadcn/UI e Radix UI",
      "files": [
        "components/ui/button.tsx",
        "components/ui/card.tsx",
        "components/ui/dialog.tsx",
        "components/ui/input.tsx",
        "components/ui/avatar.tsx",
        "components/ui/badge.tsx",
        "components/ui/sidebar.tsx",
        "components/ui/chart.tsx"
      ]
    },
    {
      "name": "Connections",
      "description": "Sistema de conexões entre usuários (follow/unfollow)",
      "files": [
        "models/Connection.ts"
      ]
    },
    {
      "name": "Invites",
      "description": "Sistema de convites para empresas e recrutadores",
      "files": [
        "app/api/invite/accept/route.ts",
        "app/api/invite/accept-notification/route.ts",
        "app/api/invite/verify/route.ts",
        "app/invite/accept/page.tsx",
        "models/Invite.ts"
      ]
    }
  ]
}

